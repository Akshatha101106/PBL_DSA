{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "C++ Launch (Active File)",
            "type": "cppdbg",
            "request": "launch",

            "program": "${fileDirname}\\${fileBasenameNoExtension}.exe",

            "args": [],
            "stopAtEntry": false,

            
            "externalConsole": false,

            "cwd": "${fileDirname}",
            "environment": [],
            "MIMode": "gdb",
            "miDebuggerPath": "C:\\MinGW\\bin\\gdb.exe",

            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "Python: student_data (module)",
            "type": "python",
            "request": "launch",
            "module": "Python_Code.student_data",
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal"
        }
    ]
}